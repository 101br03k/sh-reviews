<h1>Preview: </h1>
<div class="review">
    
    <div <% if (review.rating == 5) { %>id=fivestar-review<% } %>>
    <div class="review-header">
        <% if (review.rating == 5) { %>
            <div id="fivestar-bar" >
            <span class="star">★</span>
        <% } %>
        <span class="titleclass" <% if (review.rating == 5) { %>id=fivestar-stitle<% } %>><%- review.title_html %></span>
        <% if (review.rating == 5) { %>
            <span class="star">★</span>
            </div>
        <% } %>
    </div>
    <div class="review-content">
        <div class="text">
            <%- review.review_html %>
        </div>
        <% if (review.image) { %>
            <img src="<%= review.image %>" alt="Review Image id:<%= review.id %>">
        <% } %>
        <% if (review.tags && review.tags.length > 0) { %>
            <div class="review-tags" style="margin-top:0.5em;">
              <span style="font-weight:bold;">Tags:</span>
              <% review.tags.forEach(function(tag, i) { %>
                <span class="tag" style="display:inline-block;background:#eee;border-radius:4px;padding:0.1em 0.5em;margin-right:0.3em;font-size:0.95em;"><%= tag %></span>
              <% }) %>
            </div>
        <% } %>
    </div>
    <div class="rating">Rating: 
        <% for (let i = 0; i < review.rating; i++) { %>
        <span class="star">★</span>
        <% } %>
        <% for (let i = review.rating; i < 5; i++) { %>
        <span class="star">☆</span>
        <% } %>
        <span class="number">(<%= review.rating %>/5)</span>
    </div>
    </div>
</div>
